{
  "name": "@fifo/convee",
  "version": "0.4.2",
  "exports": "./src/index.ts",
  "imports": {
    "std/": "https://deno.land/std@0.224.0/"
  },

  "tasks": {
    "dev": "deno run --watch src/index-test.ts"
  },
  "lint": {
    "include": ["src/"],
    "exclude": [
      "src/testdata/",
      "src/fixtures/**/*.ts",
      "**/*.test.ts",
      "src/index-test.ts"
    ],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  }
}
